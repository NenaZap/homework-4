def stripedrectangle_(character,width,height):
    for stripe in range(height):
        print(width*character)
#excercise three
def Makeparallelogram_(height, width, char):
    number = 0
    spaces = height - 1
    while number <= height:
        if number != width:
            print(' '*spaces+char*width)
        number = number + 1
        spaces = spaces - 1
#excercise four
def double_digets(number):
   number_string = str(int(number))
   if len(number_string)<2:
      return('0'+number_string)
   else:
      return(number_string)        
